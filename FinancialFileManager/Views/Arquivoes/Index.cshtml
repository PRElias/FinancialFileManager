@model IEnumerable<FinancialFileManager.Models.Arquivo>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="display" id="tabela">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataHora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsuarioId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DataHora)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UsuarioId)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ArquivoId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ArquivoId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ArquivoId })
                </td>
            </tr>
        }
    </tbody>
</table>

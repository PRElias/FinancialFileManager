@model IEnumerable<FinancialFileManager.Models.Arquivo>

@{
    ViewBag.Title = "Arquivos";
}

<div class="container">
    <div class="row" style="margin-top: 10px">
        <p>
            @Html.ActionLink("Inserir novo", "Create", null, new { @class = "btn btn-primary" })
        </p>
    </div>
</div>

<table class="display" id="tabela">
    <thead>
        <tr>
            <th>
                Data / Hora
            </th>
            <th>
                Nome do arquivo
            </th>
            <th>
                Usuário de criação
            </th>
            <th>
                Ações
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DataHora)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicationUser.UserName)
                </td>
                <td>
                    @Html.ActionLink("Detalhes", "Details", new { id = item.ArquivoId }) |
                    @Html.ActionLink("Apagar", "Delete", new { id = item.ArquivoId })
                </td>
            </tr>
        }
    </tbody>
</table>
